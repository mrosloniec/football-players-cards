<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="com.football.wars"
          android:versionCode="1"
          android:versionName="1.0">

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="18"/>
    <application
        android:label="@string/app_name"
        android:icon="@drawable/ic_launcher">
        <activity
            android:name=".activities.MainActivity"
            android:label="@string/app_name"
            android:theme="@android:style/Theme.Holo.Light.NoActionBar.Fullscreen">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity
            android:name=".activities.NewGameActivity"
            android:label="@string/mainMenu_newGame"
            android:theme="@android:style/Theme.Holo.Light.NoActionBar.Fullscreen"
            android:parentActivityName="com.football.wars.MainActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.football.wars.MainActivity"/>
        </activity>
        <activity
            android:name=".activities.OptionsActivity"
            android:label="@string/mainMenu_options"
            android:theme="@android:style/Theme.Holo.Light.NoActionBar.Fullscreen"
            android:parentActivityName="com.football.wars.MainActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.football.wars.MainActivity"/>
        </activity>
        <activity
            android:name=".activities.HowToPlayActivity"
            android:label="@string/mainMenu_howToPlay"
            android:theme="@android:style/Theme.Holo.Light.NoActionBar.Fullscreen"
            android:parentActivityName="com.football.wars.MainActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.football.wars.MainActivity"/>
        </activity>
        <activity
            android:name=".activities.AuthorsActivity"
            android:label="@string/mainMenu_authors"
            android:theme="@android:style/Theme.Holo.Light.NoActionBar.Fullscreen"
            android:parentActivityName="com.football.wars.MainActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.football.wars.MainActivity"/>
        </activity>

    </application>
</manifest>
